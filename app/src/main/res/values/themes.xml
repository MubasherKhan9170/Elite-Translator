    <!--Dialog style-->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!--<item name="colorPrimary">@color/</item>
        <item name="colorSecondary">@color/shrine_pink_100</item>-->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black_900</item>

    </style>

    <style name="Theme.ELITE_TRANSLATOR.Fullscreen" parent="Theme.ELITE_TRANSLATOR">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.ELITE_TRANSLATOR.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ELITETRANSLATOR.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@android:color/transparent</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.ELITE_TRANSLATOR.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ELITE_TRANSLATOR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ELITE_TRANSLATOR.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


